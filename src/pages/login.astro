---
import Layout from "../layouts/Layout.astro";
import { LoginButton } from "../components/auth/LoginButton";
import { getUser } from "../lib/auth";

// Redirect logged-in users to home (which handles approval check)
const user = await getUser(Astro.request);
if (user) {
  return Astro.redirect("/");
}
---

<Layout title="Sign In - Soup or Bowl 2026">
  <main class="relative">
    {/* Hero background */}
    <div class="absolute inset-0 bg-primary-950">
      <div
        class="absolute inset-0 opacity-40"
        style={{
          background: `
            radial-gradient(ellipse 80% 50% at 50% -20%, var(--color-gold-500) 0%, transparent 50%),
            radial-gradient(ellipse 60% 40% at 20% 0%, var(--color-gold-400) 0%, transparent 40%),
            radial-gradient(ellipse 60% 40% at 80% 0%, var(--color-gold-400) 0%, transparent 40%)
          `,
        }}
      />
      <div
        class="absolute inset-0 opacity-[0.03]"
        style={{
          backgroundImage: `repeating-linear-gradient(
            -45deg,
            transparent,
            transparent 40px,
            var(--color-gold-500) 40px,
            var(--color-gold-500) 42px
          )`,
        }}
      />
      <div
        class="absolute inset-0"
        style={{
          background:
            "radial-gradient(ellipse at center, transparent 0%, var(--color-primary-950) 70%)",
        }}
      />
    </div>

    {/* Content */}
    <div
      class="relative z-10 min-h-screen flex flex-col items-center justify-center px-4 py-20"
    >
      {/* Super Bowl badge at top */}
      <div class="absolute top-8 left-0 right-0 flex items-center justify-center gap-3">
        <span class="h-px w-12 bg-gradient-to-r from-transparent to-gold-500" />
        <span class="text-gold-400 text-sm tracking-[0.3em] uppercase font-semibold">
          Super Bowl LX Â· February 8, 2026
        </span>
        <span class="h-px w-12 bg-gradient-to-l from-transparent to-gold-500" />
      </div>

      {/* Logo/Title */}
      <div class="text-center mb-10">
        <h1
          class="font-[family-name:var(--font-family-display)] text-5xl md:text-7xl text-white uppercase tracking-tight"
          style={{
            textShadow: `
              0 0 80px rgba(212, 165, 0, 0.3),
              4px 4px 0 var(--color-primary-900)
            `,
          }}
        >
          Soup<span class="text-gold-500 mx-2 text-[0.5em] align-middle">or</span>Bowl
        </h1>
        <p class="text-gold-500 text-2xl font-bold mt-2">2026</p>
      </div>

      {/* Sign in section */}
      <div class="text-center max-w-md w-full">
        <p class="text-primary-200 text-lg mb-8">
          Sign in to join the competition
        </p>

        <LoginButton className="w-full justify-center" />

        <p class="text-xs text-primary-500 mt-6">
          Only pre-approved participants can access the event
        </p>
      </div>
    </div>
  </main>
</Layout>
