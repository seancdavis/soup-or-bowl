---
import Layout from "../../layouts/Layout.astro";
import { MyEntryPage } from "../../components/pages";
import { getUserWithApproval } from "../../lib/auth";
import { getEntryByEmail } from "../../lib/entries";
import { getUserAdminGames } from "../../lib/games";

const auth = await getUserWithApproval(Astro.request);

if (!auth) {
  return Astro.redirect("/login");
}

if (!auth.isApproved) {
  return Astro.redirect("/unauthorized");
}

const { user } = auth;
const [entry, adminGames] = await Promise.all([
  getEntryByEmail(user.email),
  getUserAdminGames(user.email),
]);
---

<Layout title="Edit Entry - SoupOrBowl 2026">
  <MyEntryPage user={user} entry={entry} isEditing isAdmin={auth.isAdmin} adminGames={adminGames} />
</Layout>
