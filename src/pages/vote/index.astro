---
import Layout from "../../layouts/Layout.astro";
import { VotingPage } from "../../components/pages";
import { getUserWithApproval } from "../../lib/auth";
import { getAllEntries } from "../../lib/entries";
import { getVoteByEmail } from "../../lib/votes";
import { getVotingActiveSetting, getVotingLockedSetting } from "../../lib/settings";
import { getUserAdminGames } from "../../lib/games";

const auth = await getUserWithApproval(Astro.request);

if (!auth) {
  return Astro.redirect("/login");
}

if (!auth.isApproved) {
  return Astro.redirect("/unauthorized");
}

const { user } = auth;
const [entries, existingVote, votingActive, votingLocked, adminGames] = await Promise.all([
  getAllEntries(),
  getVoteByEmail(user.email),
  getVotingActiveSetting(),
  getVotingLockedSetting(),
  getUserAdminGames(user.email),
]);
---

<Layout title="Vote - SoupOrBowl 2026">
  <VotingPage
    user={user}
    entries={entries}
    existingVote={existingVote}
    votingActive={votingActive}
    votingLocked={votingLocked}
    isAdmin={auth.isAdmin}
    adminGames={adminGames}
  />
</Layout>
