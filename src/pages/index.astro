---
import Layout from "../layouts/Layout.astro";
import { HomePage } from "../components/pages";
import { getUserWithApproval } from "../lib/auth";
import { getEntryByEmail } from "../lib/entries";

const auth = await getUserWithApproval(Astro.request);

if (!auth) {
  return Astro.redirect("/login");
}

if (!auth.isApproved) {
  return Astro.redirect("/unauthorized");
}

const { user } = auth;
const entry = await getEntryByEmail(user.email);
---

<Layout title="Soup or Bowl 2026 - Save the Date">
  <HomePage user={user} hasEntry={!!entry} isAdmin={auth.isAdmin} />
</Layout>
